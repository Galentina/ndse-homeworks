<%- include('../layout/start', { title: title }) %>
<%- include('../layout/menu') %>

<h1><%= title %></h1>
<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <article class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.authors %></p>
                <p class="card-text"><%= book.description %></p>
                <a href="/api/books/<%= book.id %>/download">Скачать</a>
                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
            </article>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div id="list" class="list-group"></div>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <div class="form-group">
            <label for="username">User</label>
            <input placeholder="User" type="text" id="username" class="form-control">
        </div>
        <div class="form-group">
            <label for="text"></label>
            <textarea placeholder="Message" class="form-control" id="text"></textarea>
        </div>
        <button type="submit" id="send-room" class="btn btn-primary">Send</button>
    </div>
</div>

<%- include('../layout/end') %>
